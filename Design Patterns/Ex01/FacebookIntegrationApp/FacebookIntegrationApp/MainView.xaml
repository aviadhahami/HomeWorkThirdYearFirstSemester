<Window x:Class="FacebookIntegrationApp.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Facebook Integration" Height="350" Width="525">
    <Grid>
    <TextBlock Text="Welcome To Aviad and Omer's Facebook App!" Margin="28,36,27,249" RenderTransformOrigin="0.58,0.481" FontFamily="Roboto" FontSize="22"/>
    <Button Background="#3b5998" 
                Margin="98,118,93,106" 
                FontFamily="Roboto" 
                FontWeight="Bold" 
                FontSize="20"
                Click="Login">
        <Button.Content>
            <StackPanel Orientation="Horizontal">
                <Image Source="img/facebook-icon.png" 
                           Width="50px" 
                           Height="50px" 
                           Stretch="Fill" />
                <TextBlock 
                        Foreground="#FAFAFA" 
                        Margin="15">
                   Login using Facebook
                </TextBlock>
            </StackPanel>
        </Button.Content>
    </Button>
</Grid>
</Window>
