<UserControl x:Class="FacebookIntegrationApp.LoginScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock Text="Welcome To Aviad and Omer's Facebook App!" Margin="28,36,27,249" RenderTransformOrigin="0.58,0.481" FontFamily="Roboto" FontSize="22"/>
        <Button Background="#3b5998" 
                Margin="98,118,93,106" 
                FontFamily="Roboto" 
                FontWeight="Bold" 
                FontSize="20"
                Click="Login">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="img/facebook-icon.png" 
                           Width="50px" 
                           Height="50px" 
                           Stretch="Fill" />
                    <TextBlock 
                        Foreground="#FAFAFA" 
                        Margin="15">
                   Login using Facebook
                    </TextBlock>
                </StackPanel>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
